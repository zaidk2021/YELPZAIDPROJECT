<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="campground[title]" class="form-control" id="title" required>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="form-group mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="campground[location]" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>            
            </div>
            <div class="form-group mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price label">$</span>
                    <input type="text" id="price" name="campground[price]" placeholder="0.00" aria-describedby="basic-addon1" aria-label="price" aria-describedby="price-label"  class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>            
                </div>
            <div class="form-group mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="campground[description]" id="description" class="form-control" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add images</label>
                <input class="form-control" type="file" id="image" name="image" multiple required>
              </div>
            
            <!-- 
            <div class="form-group mb-3">
                <label for="image" class="form-label">Image url</label>
                <input type="text" id="image" name="campground[image]" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="mb-3">
            <button type="submit" class="btn btn-primary">Add campground</button>
            </div></div> 
            -->
            <button type="submit" class="btn btn-primary">Add campground</button>
        </form>
        <a href="/campgrounds">all campgrounds</a>  
    </div>
</div>
